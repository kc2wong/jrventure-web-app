{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@webapi/*": ["__generated__/linkedup-web-api-client"],
      "@components/*": ["components/*"],      
      "@contexts/*": ["contexts/*"],      
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@providers/*": ["providers/*"],
      "@repos/*": ["repos/*"],
      "@schemas/*": ["schemas/*"],
      "@services/*": ["services/*"],
      "@states/*": ["states/*"],
      "@t/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}
